{{>header}}
<h4 class="mb-3 text-primary">Add New User</h4>
<form method="post">
    <div class="mb-3">
        <input name="name" placeholder="name" class="form-control" value="{{user.name}}">
    </div>
    <div class="mb-3">
        <input name="age" placeholder="age" class="form-control" value="{{user.age}}">
    </div>
    <div class="mb-3">
        <input name="email" placeholder="email" class="form-control" value="{{user.email}}">
    </div>
    <div class="mb-3">
        <input name="password" placeholder="password" class="form-control" value="{{user.password}}">
    </div>
 <select class="form-select" aria-label="Default select example" name="gender" value="{{user.gender}}">
  <option selected>Select Gender</option>
  <option name="male" value="{{user.gender}}">Male</option>
  <option name="female" value="{{user.gender}}">female</option>
</select>
        <button class="btn btn-primary">Add New User</button>
    </div>
</form>
{{>footer}}